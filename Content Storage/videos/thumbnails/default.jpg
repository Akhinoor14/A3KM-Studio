<svg xmlns="http://www.w3.org/2000/svg" width="800" height="450" viewBox="0 0 800 450">
  <!-- Background -->
  <rect width="800" height="450" fill="#0a0a0a"/>
  
  <!-- Grid Pattern -->
  <defs>
    <pattern id="grid-video" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#FF6600" stroke-width="0.5" opacity="0.1"/>
    </pattern>
  </defs>
  <rect width="800" height="450" fill="url(#grid-video)"/>
  
  <!-- Video Icon -->
  <g transform="translate(400, 225)">
    <!-- Play Button Circle -->
    <circle cx="0" cy="0" r="60" fill="none" stroke="#FF6600" stroke-width="3" opacity="0.3"/>
    <circle cx="0" cy="0" r="50" fill="#FF6600" opacity="0.8"/>
    
    <!-- Play Triangle -->
    <path d="M -15 -20 L -15 20 L 25 0 Z" fill="#fff"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="350" font-family="'Inter', sans-serif" font-size="32" font-weight="700" fill="#FF6600" text-anchor="middle">
    VIDEO BLOG
  </text>
  <text x="400" y="385" font-family="'Inter', sans-serif" font-size="18" fill="#666" text-anchor="middle">
    Default Thumbnail
  </text>
</svg>

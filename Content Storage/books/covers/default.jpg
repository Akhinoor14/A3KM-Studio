<svg xmlns="http://www.w3.org/2000/svg" width="600" height="850" viewBox="0 0 600 850">
  <!-- Book Cover Background -->
  <rect width="600" height="850" fill="#0a0a0a"/>
  
  <!-- Grid Pattern -->
  <defs>
    <pattern id="grid-book" width="30" height="30" patternUnits="userSpaceOnUse">
      <path d="M 30 0 L 0 0 0 30" fill="none" stroke="#0066CC" stroke-width="0.5" opacity="0.1"/>
    </pattern>
  </defs>
  <rect width="600" height="850" fill="url(#grid-book)"/>
  
  <!-- Book Icon -->
  <g transform="translate(300, 300)">
    <circle cx="0" cy="0" r="80" fill="none" stroke="#0066CC" stroke-width="3" opacity="0.3"/>
    
    <!-- Book -->
    <rect x="-50" y="-40" width="100" height="80" fill="#0066CC" opacity="0.8"/>
    <path d="M -50 -40 L -45 -35 L -45 45 L -50 40 Z" fill="#003366"/>
    <line x1="-30" y1="-25" x2="30" y2="-25" stroke="#fff" stroke-width="2"/>
    <line x1="-30" y1="-10" x2="30" y2="-10" stroke="#fff" stroke-width="1.5"/>
    <line x1="-30" y1="0" x2="30" y2="0" stroke="#fff" stroke-width="1.5"/>
    <line x1="-30" y1="10" x2="30" y2="10" stroke="#fff" stroke-width="1.5"/>
    <line x1="-30" y1="20" x2="15" y2="20" stroke="#fff" stroke-width="1.5"/>
  </g>
  
  <!-- Text -->
  <text x="300" y="500" font-family="'Inter', sans-serif" font-size="42" font-weight="700" fill="#0066CC" text-anchor="middle">
    BOOK / PDF
  </text>
  <text x="300" y="550" font-family="'Inter', sans-serif" font-size="24" fill="#666" text-anchor="middle">
    Default Cover
  </text>
  
  <!-- Footer -->
  <text x="300" y="780" font-family="'Inter', sans-serif" font-size="18" fill="#444" text-anchor="middle">
    A3KM STUDIO
  </text>
</svg>
